@startuml Diagrama de Casos de Uso - Manage Products Bar

left to right direction
skinparam packageStyle rectangle

actor "Administrador" as Admin

rectangle "Sistema de Gestión de Productos del Bar" {
  
  usecase "Mover Categoría a Bar" as UC1
  usecase "Mover Producto a Bar" as UC2
  usecase "Eliminar Categoría del Bar" as UC3
  usecase "Eliminar Producto del Bar" as UC4
  usecase "Seleccionar CategoryType" as UC5
  usecase "Seleccionar ProductType" as UC6
  usecase "Seleccionar Category" as UC7
  usecase "Seleccionar Product" as UC8
  usecase "Visualizar Árbol Templates" as UC9
  usecase "Visualizar Árbol Bar" as UC10
  usecase "Cargar ProductsType" as UC11
  usecase "Cargar Products" as UC12
   
  Admin -- UC1
  Admin -- UC2
  Admin -- UC3
  Admin -- UC4
  Admin -- UC5
  Admin -- UC7
  
  UC1 ..> UC5 : <<include>>
  UC2 ..> UC6 : <<include>>
  UC2 ..> UC7 : <<include>>
  UC3 ..> UC7 : <<include>>
  UC4 ..> UC8 : <<include>>
  UC5 ..> UC11 : <<include>>
  UC7 ..> UC12 : <<include>>
  UC9 ..> UC5 : <<extends>>
  UC10 ..> UC7 : <<extends>>
}

@enduml
